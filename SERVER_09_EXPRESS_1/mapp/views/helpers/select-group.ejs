
 <% 
    selectGroupsHelper = (groupsItems, optionSelected) =>{ 
        let xhtml = `<option value="novalue">Choose Group</option>`;        
        groupsItems.forEach((item, index)=>{
            let selected = (item.id == optionSelected)? 'selected = "selected"' : '';
            xhtml += `<option value="${item.id}" ${selected }>${item.name}</option>`                
        })
        return xhtml;
    }
%> 

    